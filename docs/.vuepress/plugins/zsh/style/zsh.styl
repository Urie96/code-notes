.zsh-window
    background: #555;
    border-radius: inherit;
    border-bottom-left-radius: 0;
    border-bottom-right-radius: 0;
    position: absolute;
    width: 100%;
    &>svg
        margin: 5px 0 1px 10px !important

div.language-zsh
    pre.language-zsh
        padding: 1.5em 1em 0.6em 1em
        span.token
            &.function
                color: rgb(72,197,61)
            &.root
                color: rgb(120,232,61)
            &.signal
                color: #d16969
            &.built-in
                color: #fff    
            &.parameter
                color: #d7ba7d